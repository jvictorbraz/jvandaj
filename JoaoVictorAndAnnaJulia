    <script>
        function calcularTempo(dataInicio, idContador) {
            const dataInicial = new Date(dataInicio); 
            const agora = new Date();

            const tempoTotal = agora - dataInicial;

            const meses = Math.floor(tempoTotal / (1000 * 60 * 60 * 24 * 30));
            const dias = Math.floor((tempoTotal % (1000 * 60 * 60 * 24 * 30)) / (1000 * 60 * 60 * 24));
            const horas = Math.floor((tempoTotal % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutos = Math.floor((tempoTotal % (1000 * 60 * 60)) / (1000 * 60));
            const segundos = Math.floor((tempoTotal % (1000 * 60)) / 1000);

            const contador = `${meses} meses, ${dias} dias, ${horas} horas, ${minutos} minutos, ${segundos} segundos`;

            document.getElementById(idContador).textContent = contador;
        }

        setInterval(() => calcularTempo('2024-06-12T00:00:00', "contador"), 1000);
        setInterval(() => calcularTempo('2024-04-22T00:00:00', "contador2"), 1000);

        calcularTempo('2024-06-12T00:00:00', "contador");
        calcularTempo('2024-04-22T00:00:00', "contador2");
    </script>
